{
  "name": "react-creme",
  "version": "1.0.0",
  "description": "Mono repo for react-creme",
  "directories": {
    "lib": "lib",
    "documentation": "documentation"
  },
  "dependencies": {
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-classes": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/bluebird": "^3.5.36",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.16",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "postcss": "^8.4.6",
    "postcss-bem-linter": "^3.3.0",
    "postcss-preset-env": "^7.3.1",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "sass": "^1.49.7",
    "snyk": "^1.851.0",
    "stylelint": "14.5.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-toolbelt": "^9.6.0",
    "turbo": "^1.1.2",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "lint": "turbo run lint",
    "format": "turbo run format",
    "build": "turbo run build",
    "prepare": "husky install",
    "dev": "turbo run dev --scope=*docu*",
    "story": "turbo run dev --scope=*story*",
    "test": "turbo run test",
    "all": "turbo run format lint test build",
    "build:lib": "turbo run build --scope=lib",
    "build:doc": "turbo run build --scope=*docu*",
    "ci": "turbo run ci",
    "snyk": "turbo run snyk",
    "fix-css": "turbo run fix-css",
    "fix-js": "turbo run fix-js",
    "clean": "pnpm fix-css & pnpm fix-js & pnpm format & pnpm lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabhuignoto/react-creme.git"
  },
  "author": "Prabhu Murthy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prabhuignoto/react-creme/issues"
  },
  "homepage": "https://github.com/prabhuignoto/react-creme#readme",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.tsx": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "**/*.scss": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  },
  "packageManager": "pnpm@6.27.1"
}
