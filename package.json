{
  "name": "react-creme-pre-alpha",
  "version": "0.1.1",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && tsc && vite build",
    "ci": "yarn lint:all && yarn test -- --runInBand --updateSnapshot",
    "dev": "vite",
    "emit-dts": "rimraf ./dts && tsc --project tsconfig.json --declaration --emitDeclarationOnly",
    "eslint": "npx eslint ./src/**/*.tsx",
    "extract-api": "rimraf ./typings && npx api-extractor run --local --verbose",
    "fix:css": "npx stylelint ./src/**/*.scss --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:all": "yarn run eslint && yarn run lint:css && yarn run prettier:check",
    "lint:css": "npx stylelint ./src/**/*.scss",
    "playwright": "playwright test",
    "prepare": "husky install",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "rollup": "rimraf ./lib && rollup -c",
    "serve": "vite preview",
    "snyk": "snyk test",
    "test:dev": "jest --runInBand"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "nanoid": "^3.1.30",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "resize-observer-polyfill": "^1.5.1",
    "use-debounce": "^7.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.3.2",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@csstools/postcss-sass": "^4.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@rollup/plugin-babel": "^5.3.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.0.0-alpha.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.4.1",
    "babel-jest": "^27.4.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "canvas": "^2.8.0",
    "cssnano": "^5.0.14",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "history": "5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.5",
    "postcss": "^8.4.5",
    "postcss-bem-linter": "^3.3.0",
