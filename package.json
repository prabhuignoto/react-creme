{
  "name": "react-creme",
  "version": "1.0.0",
  "description": "Mono repo for react-creme",
  "directories": {
    "lib": "lib",
    "documentation": "documentation"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "postcss": "^8.4.5",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "snyk": "^1.838.0",
    "stylelint": "14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "turbo": "^1.0.28",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "lint": "turbo run lint",
    "format": "turbo run format",
    "build": "turbo run build",
    "prepare": "husky install",
    "dev": "turbo run dev --scope=*docu*",
    "story": "turbo run dev --scope=*story*",
    "test": "turbo run vi-test",
    "all": "turbo run format lint test build",
    "build:lib": "turbo run build --scope=*lib*",
    "build:doc": "turbo run build --scope=*docu*",
    "ci": "turbo run ci",
    "snyk": "turbo run snyk",
    "fix-css": "turbo run fix-css",
    "fix-js": "turbo run fix-js",
    "clean": "pnpm fix-css & pnpm fix-js & pnpm format & pnpm lint"
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "format": {},
      "lint": {},
      "build": {
        "outputs": [
          "dist/**",
          "dts/**",
          "typings/**",
          "expo_dist"
        ]
      },
      "test": {
        "outputs": [
          "coverage",
          ".jest-cache"
        ]
      },
      "dev": {
        "outputs": [
          ".vite_cache"
        ]
      },
      "ci": {
        "outputs": [
          "dist/**",
          "dts/**",
          "typings/**",
          "expo_dist"
        ]
      },
      "snyk": {},
      "fix-css": {},
      "fix-js": {},
      "vi-test": {}
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabhuignoto/react-creme.git"
  },
  "author": "Prabhu Murthy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prabhuignoto/react-creme/issues"
  },
  "homepage": "https://github.com/prabhuignoto/react-creme#readme",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "**/*.tsx": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "**/*.scss": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  }
}