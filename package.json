{
  "name": "react-creme",
  "version": "0.1.0",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "eslint": "npx eslint ./src/**/*.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:css": "npx stylelint ./src/**/*.scss",
    "rollup": "rimraf ./dist && rollup -c",
    "lint:all": "yarn run eslint && yarn run lint:css && yarn run prettier:check",
    "fix:css": "npx stylelint ./src/**/*.scss --fix",
    "test": "jest --coverage",
    "test:dev": "jest --runInBand",
    "prepare": "husky install",
    "playwright": "playwright test",
    "ci": "yarn lint:all && yarn test -- --runInBand --updateSnapshot"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "nanoid": "^3.1.30",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^6.0.0-beta.8",
    "use-debounce": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-optional-chaining": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@csstools/postcss-sass": "^4.0.0",
    "@playwright/test": "^1.16.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.3.1",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "cssnano": "^5.0.8",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.1",
    "eslint-plugin-react": "^7.26.0",
    "history": "5",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "postcss": "^8.3.11",
    "postcss-bem-linter": "^3.3.0",
    "postcss-prefixer": "^2.1.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "rollup": "^2.58.3",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-sass": "^1.2.9",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.43.4",
    "stylelint": "14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-scss": "^4.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4",
    "use-timer": "^2.0.1",
    "vite": "^2.6.13"
  },
  "lint-staged": {
    "**/*.tsx": [
      "npx prettier --write",
      "eslint --fix",
      "git add"
    ],
    "**/*.scss": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "main": "dist/react-creme.js",
  "module": "dist/react-creme.esm.js",
  "umd": "dist/react-creme.umd.js",
  "css": "dist/react-creme.css"
}
