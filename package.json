{
  "name": "react-creme",
  "version": "1.0.0",
  "description": "Mono repo for react-creme",
  "directories": {
    "lib": "lib",
    "documentation": "documentation"
  },
  "dependencies": {
    "snyk": "^1.819.0",
    "turbo": "^1.0.24"
  },
  "scripts": {
    "lint:all": "turbo run lint:all",
    "format": "turbo run format",
    "build": "turbo run build",
    "prepare": "husky install",
    "dev": "turbo run dev --scope=*docu*",
    "test": "turbo run test",
    "all": "turbo run format lint:all test build",
    "build:lib": "turbo run build --scope=*lib*",
    "ci": "turbo run ci",
    "snyk": "turbo run snyk"
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "format": {
        "outputs": [],
        "cache": true
      },
      "lint:all": {
        "dependsOn": [
          "format"
        ]
      },
      "build": {
        "dependsOn": [
          "^build",
          "test"
        ]
      },
      "test": {},
      "dev": {
        "cache": false
      },
      "ci": {},
      "snyk": {}
    }
  },
  "workspaces": [
    "documentation/*",
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabhuignoto/react-creme.git"
  },
  "author": "Prabhu Murthy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prabhuignoto/react-creme/issues"
  },
  "homepage": "https://github.com/prabhuignoto/react-creme#readme",
  "devDependencies": {
    "husky": "^7.0.4"
  },
  "lint-staged": {
    "**/*.tsx": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "**/*.scss": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  }
}