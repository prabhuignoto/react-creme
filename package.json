{
  "name": "react-creme",
  "version": "1.0.0",
  "description": "Mono repo for react-creme",
  "main": ".eslintrc.js",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "turbo": "^1.0.24"
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "format": {
        "outputs": [],
        "cache": true
      },
      "lint:all": {
        "dependsOn": [
          "format"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "test": {}
    }
  },
  "workspaces": [
    "documentation/*",
    "lib/*"
  ],
  "scripts": {
    "lint:all": "turbo run lint:all",
    "format": "turbo run format",
    "build": "turbo run build",
    "all": "turbo run lint:all format test build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabhuignoto/react-creme.git"
  },
  "author": "Prabhu Murthy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prabhuignoto/react-creme/issues"
  },
  "homepage": "https://github.com/prabhuignoto/react-creme#readme",
  "devDependencies": {
    "husky": "^7.0.4"
  },
  "lint-staged": {
    "**/*.tsx": [
      "npx prettier --write",
      "npx eslint --fix",
      "git add"
    ],
    "**/*.scss": [
      "npx prettier --write",
      "npx stylelint",
      "git add"
    ]
  }
}