    "knip": "^5.46.0",
    "lightningcss": "^1.29.0",
    "oxlint": "^1.24.0",
    "postcss-scss": "^4.0.7",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite-plugin-lightningcss": "^0.0.5",
    "vite-plugin-pwa": "^1.1.0"
  }
