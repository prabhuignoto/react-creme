  "scripts": {
    "lint": "turbo run oxlint && turbo run lint",
    "oxlint": "oxlint . --deny-warnings",
    "format": "turbo run format",
    "build": "turbo run build",
    "prepare": "husky install",
    "dev": "turbo run dev --filter=*docu*",
    "story": "turbo run dev --filter=*story*",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "all": "turbo run format lint test build",
    "build:lib": "turbo run build:lib",
    "build:doc": "turbo run build:doc",
    "ci": "turbo run ci",
    "snyk": "turbo run snyk",
    "fix-css": "turbo run fix-css",
    "fix-js": "turbo run fix-js",
    "fix-all": "npx concurrently \"pnpm fix-css\" \"pnpm fix-js\"",
    "clean": "pnpm fix-all & pnpm format & pnpm lint",
    "percy": "turbo run percy",
    "build-story": "turbo run build-story",
    "relative-ci": "relative-ci",
    "knip": "knip",
    "knip:production": "knip --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prabhuignoto/react-creme.git"
  },
  "author": "Prabhu Murthy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prabhuignoto/react-creme/issues"
  },
  "homepage": "https://github.com/prabhuignoto/react-creme#readme",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.18.1",
    "pnpm": ">=10.14.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{js,jsx,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{scss,css}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@swc/plugin-emotion": "^11.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
