{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["react", "react-dom", "vite/client", "node"],
    "paths": {
      "@common": ["../lib/components/common"],
      "@common/icons": ["../lib/components/common/icons"],
      "@feedback": ["../lib/components/feedback"],
      "@core": ["../lib/components/core/index.ts"],
      "@overlay": ["../lib/components/overlay"],
      "@data": ["../lib/components/data"],
      "@inputs": ["../lib/components/inputs"],
      "@layout": ["../lib/components/layout"]
    }
  },
  "include": [
    "svg.d.ts",
    "Globals.d.ts",
    "components/**/*.tsx",
    "home/**/*.tsx",
    "home/*.tsx",
    "common/**/*.tsx",
    "atoms/**/*.tsx",
    "App.tsx",
    "main.tsx",
    "../lib"
  ],
  // "references": [
  //   {
  //     "path": "../lib/components/core"
  //   },
  //   {
  //     "path": "../lib/components/common"
  //   },
  //   {
  //     "path": "../lib/components/data"
  //   },
  //   {
  //     "path": "../lib/components/feedback"
  //   },
  //   {
  //     "path": "../lib/components/inputs"
  //   },
  //   {
  //     "path": "../lib/components/layout"
  //   },
  //   {
  //     "path": "../lib/components/overlay"
  //   }
  // ],
  "exclude": ["node_modules", "expo_dist"]
}
