{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["react", "react-dom", "vite/client", "node"],
    "paths": {
      "@icons": ["../lib/icons/index.ts"],
      "@lib": ["../lib/components/index.ts"]
    }
  },
  "include": [
    "svg.d.ts",
    "Globals.d.ts",
    "components/**/*.tsx",
    "home/**/*.tsx",
    "home/*.tsx",
    "common/**/*.tsx",
    "atoms/**/*.tsx",
    "App.tsx",
    "main.tsx"
  ],
  "exclude": ["node_modules", "expo_dist"]
}
