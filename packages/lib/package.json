{
  "name": "react-creme",
  "version": "0.5.3",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "rollup -c",
    "ci": "pnpm lint && pnpm test-ci && pnpm build",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test-ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^3.3.1",
    "use-debounce": "^7.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@csstools/postcss-sass": "^5.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.0.0-alpha.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/bluebird": "^3.5.36",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/react-transition-group": "^4.4.4",
    "@vitejs/plugin-react": "1.2.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/ui": "^0.4.2",
    "c8": "^7.11.0",
    "jest-sonar-reporter": "^2.0.0",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.6",
    "resize-observer-polyfill": "^1.5.1",
    "rollup": "^2.67.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-purgecss": "^4.1.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-visualizer": "^5.5.4",
    "ts-toolbelt": "^9.6.0",
    "vitest": "0.4.2"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist/*"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "browser": "dist/react-creme.js",
  "module": "dist/react-creme.mjs",
  "css": "dist/react-creme.css"
}
