    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.49.0",
    "snyk": "^1.840.0",
    "stylelint": "14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-scss": "^4.1.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vitest": "^0.2.5"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "main": "dist/react-creme.js",
  "module": "dist/react-creme.mjs",
  "css": "dist/react-creme.css"
