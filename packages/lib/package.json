{
  "name": "react-creme",
  "version": "0.26.0",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "vite build && pnpm emit",
    "build:vite": "vite build",
    "build:dev": "vite build --mode development",
    "dev": "vite",
    "ci": "pnpm lint && pnpm build",
    "oxlint": "oxlint .",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test:ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui",
    "test-ui": "vitest --config ./vitest.config.dev.ts --ui",
    "test:quiet": "vitest --config ./vitest.config.dev.ts --silent --run",
    "emit": "tsc -p ./tsconfig.emit.json --emitDeclarationOnly",
    "build:lib": "pnpm build",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^5.1.5",
    "use-debounce": "^10.0.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.1.1",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bluebird": "^3.5.38",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.15.21",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-transition-group": "^4.4.12",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cssnano": "^7.0.7",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.24",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.6",
    "resize-observer-polyfill": "^1.5.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^11.2.0",
    "typescript": "^5.9.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "6.3.5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist/**/*"
  ],
  "main": "dist/react-creme.cjs",
  "module": "dist/react-creme.mjs",
  "types": "dist/react-creme.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react-creme.d.ts",
      "import": "./dist/react-creme.mjs",
      "require": "./dist/react-creme.cjs",
      "default": "./dist/react-creme.mjs"
    },
    "./package.json": "./package.json",
    "./css": "./dist/react-creme.css"
  },
  "css": "dist/react-creme.css",
  "sideEffects": false
}
