{
  "name": "react-creme",
  "version": "0.0.40",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "pnpm rollup",
    "ci": "pnpm lint && pnpm test-ci",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "rollup": "rimraf ./dist && rollup -c",
    "snyk": "snyk test",
    "test-ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^3.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "use-debounce": "^7.0.1",
    "use-deep-compare-effect": "^1.8.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@csstools/postcss-sass": "^4.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@svgr/rollup": "^6.2.1",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.0.0-alpha.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/bluebird": "^3.5.36",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/react-transition-group": "^4.4.4",
    "@vitejs/plugin-react": "1.1.4",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/ui": "^0.2.5",
    "autoprefixer": "^10.4.2",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "c8": "^7.11.0",
    "cssnano": "^5.0.16",
    "esbuild": "^0.14.14",
    "jest-sonar-reporter": "^2.0.0",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.5",
    "postcss-bem-linter": "^3.3.0",
    "postcss-prefixer": "^2.1.3",
    "postcss-preset-env": "^7.2.3",
    "prettier": "^2.5.1",
    "react": "file:../../node_modules/react",
    "react-dom": "file:../../node_modules/react-dom",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-purgecss": "^4.1.3",
