{
  "name": "react-creme",
  "version": "0.17.1",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "npx cross-env NODE_ENV=production webpack --config webpack.config.mjs --progress",
    "build:dev": "npx cross-env NODE_ENV=development webpack --config webpack.config.mjs --progress",
    "ci": "pnpm lint && pnpm test-ci && pnpm build",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test-ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui",
    "test:quiet": "vitest --config ./vitest.config.dev.ts --silent --run"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^4.0.0",
    "use-debounce": "^8.0.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.0.1",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.1",
    "@types/react-syntax-highlighter": "^15.5.4",
    "@types/react-transition-group": "^4.4.5",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-react": "2.0.1",
    "@vitest/browser": "^0.21.1",
    "@vitest/ui": "^0.21.1",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "c8": "^7.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "6.7.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "jsdom": "^20.0.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.16",
    "postcss-loader": "7.0.1",
    "postcss-preset-env": "^7.7.2",
    "resize-observer-polyfill": "^1.5.1",
    "sass-loader": "13.0.2",
    "terser-webpack-plugin": "^5.3.3",
    "ts-loader": "^9.3.1",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.7.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "3.0.6",
    "vitest": "0.21.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist/*"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "module": "dist/react-creme.js",
  "css": "dist/react-creme.css",
  "sideEffects": false
}
