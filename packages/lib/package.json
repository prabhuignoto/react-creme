{
  "name": "react-creme",
  "version": "0.0.45",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "ci": "pnpm lint && pnpm test-ci",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test-ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^3.2.0",
    "use-debounce": "^7.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "file:../../node_modules/@babel/core",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "file:../../node_modules/@babel/preset-env",
    "@babel/preset-react": "file:../../node_modules/@babel/preset-react",
    "@babel/preset-typescript": "file:../../node_modules/@babel/preset-typescript",
    "@csstools/postcss-sass": "^4.0.0",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^13.0.0-alpha.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/bluebird": "^3.5.36",
    "@types/node": "file:../../node_modules/@types/node",
    "@types/react": "file:../../node_modules/@types/react",
    "@types/react-dom": "file:../../node_modules/@types/react-dom",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/react-transition-group": "^4.4.4",
    "@vitejs/plugin-react": "1.1.4",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/ui": "^0.2.7",
    "c8": "^7.11.0",
    "esbuild": "file:../../node_modules/esbuild",
    "jest-sonar-reporter": "^2.0.0",
    "jsdom": "^19.0.0",
    "prettier": "file:../../node_modules/prettier",
    "react": "file:../../node_modules/react",
    "react-dom": "file:../../node_modules/react-dom",
    "resize-observer-polyfill": "^1.5.1",
    "snyk": "file:../../node_modules/snyk",
    "ts-toolbelt": "^9.6.0",
    "typescript": "file:../../node_modules/typescript",
    "vite": "^2.7.13",
    "vitest": "^0.2.8"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "main": "dist/react-creme.js",
  "module": "dist/react-creme.mjs",
  "css": "dist/react-creme.css"
}