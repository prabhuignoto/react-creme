{
  "name": "react-creme",
  "version": "0.26.0",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "vite build && pnpm emit",
    "build:vite": "vite build",
    "build:webpack": "npx cross-env NODE_ENV=production webpack --config webpack.config.mjs --progress && pnpm emit",
    "build:dev": "vite build --mode development",
    "dev": "vite",
    "ci": "pnpm lint && pnpm build",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test:ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui",
    "test-ui": "vitest --config ./vitest.config.dev.ts --ui",
    "test:quiet": "vitest --config ./vitest.config.dev.ts --silent --run",
    "emit": "tsc -p ./tsconfig.emit.json --emitDeclarationOnly",
    "build:lib": "pnpm build"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^5.1.5",
    "use-debounce": "^10.0.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bluebird": "^3.5.38",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.15.21",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-transition-group": "^4.4.12",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "4.4.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/browser": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "autoprefixer": "^10.4.14",
    "cssnano": "^7.0.7",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "7.1.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.4.24",
    "postcss-import": "^16.1.0",
    "postcss-loader": "8.1.1",
    "postcss-preset-env": "^10.1.6",
    "resize-observer-polyfill": "^1.5.1",
    "sass-loader": "16.0.5",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.2",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^5.1.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "6.3.5",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "3.1.4",
    "webpack": "^5.86.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist/**/*"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "main": "dist/react-creme.cjs",
  "module": "dist/react-creme.mjs",
  "types": "dist/react-creme.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react-creme.d.ts",
      "import": "./dist/react-creme.mjs",
      "require": "./dist/react-creme.cjs",
      "default": "./dist/react-creme.mjs"
    },
    "./package.json": "./package.json",
    "./css": "./dist/react-creme.css"
  },
  "css": "dist/react-creme.css",
  "sideEffects": false
}
