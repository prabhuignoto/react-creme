{
  "name": "react-creme",
  "version": "0.15.0",
  "author": {
    "name": "Prabhu Murthy",
    "email": "prabhu.m.murthy@gmail.com"
  },
  "description": "Modern UI Toolkit for React",
  "license": "MIT",
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "react-creme",
    "ui toolkit",
    "design system"
  ],
  "scripts": {
    "build": "rollup -c",
    "ci": "pnpm lint && pnpm test-ci && pnpm build",
    "eslint": "eslint ./components/**/*.{tsx,ts}",
    "fix-js": "eslint ./components/**/*.{tsx,ts} --fix",
    "fix-css": "stylelint ./components/**/*.scss ./design/**/*.scss --fix",
    "format": "prettier --write \"components/**/*.{js,jsx,ts,tsx}\"",
    "lint": "pnpm eslint && pnpm lint:css && pnpm prettier:check",
    "lint:css": "stylelint ./components/**/*.scss ./design/**/*.scss",
    "prettier:check": "prettier --check \"components/**/*.{ts,tsx}\"",
    "snyk": "snyk test",
    "test-ci": "vitest --config ./vitest.config.ts",
    "test": "vitest --config ./vitest.config.dev.ts --ui"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "hex-rgb": "^5.0.0",
    "nanoid": "^4.0.0",
    "use-debounce": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.0.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/bluebird": "^3.5.36",
    "@types/react-syntax-highlighter": "^15.5.3",
    "@types/react-transition-group": "^4.4.5",
    "@vitejs/plugin-react": "1.3.2",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/ui": "^0.18.0",
    "c8": "^7.11.3",
    "jsdom": "^20.0.0",
    "postcss": "^8.4.14",
    "resize-observer-polyfill": "^1.5.1",
    "rollup": "^2.76.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-purgecss": "^4.1.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "rollup-plugin-visualizer": "^5.6.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.7.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "vitest": "0.18.0"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "not dead",
    "> 5%"
  ],
  "files": [
    "dist/*"
  ],
  "resolutions": {
    "nth-check": "^2.0.1",
    "postcss": "^8.2.13"
  },
  "main": "dist/react-creme.js",
  "module": "dist/esm/react-creme.mjs",
  "css": "dist/react-creme.css",
  "sideEffects": false
}
