{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true,
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "react",
      "react-dom",
      "jest",
      "@testing-library/jest-dom",
      "vitest/globals"
    ],
  },
  "include": [
    "./components",
  ],
  "exclude": [
    "./**/*.test.tsx",
    "node_modules",
    "dist",
    "rollup.config.js"
  ],
  "files": [
    "react-creme.ts"
  ],
}