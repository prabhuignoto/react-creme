{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dts",
    "types": [
      "@testing-library/jest-dom",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "./src/components",
    "./src/components/models", "src/react-creme-pre-alpha.ts",
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "node_modules",
    "dist",
    "rollup.config.js"
  ],
  "files": [
    "src/react-creme-pre-alpha.ts"
  ],
}